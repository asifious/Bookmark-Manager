{
  "manifest_version": 3,
  "name": "Bookmark Manager",
  "version": "1.0.0",
  "description": "Manage all your bookmarks from a sidebar with dark mode, drag-and-drop, and sync.",
  "author": "Asifur Rahman, @asifious",
  "permissions": [
    "bookmarks",
    "history",
    "storage",
    "sidePanel"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
